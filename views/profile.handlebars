{{#each posts as |post| }}
      <div class="card post-list" style="width: 85%;margin-left: auto;margin-right: auto;">
        <h2>{{post.title}}</h2>
        <div class="card-body">
          <p class="card-text">{{post.content}}</p>
        </div>
        <button data-id ="{{post.id}}"">Delete</button>
      </div>
{{/each}}
