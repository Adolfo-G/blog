<div>
  <h1 id="header" title="{{post.title}}" user="{{post.user.id}}">{{post.title}} by {{post.user.name}}</h1>

  <h2>{{post.content}}</h2>
  <hr>
  {{#each post.comments as |comment|}}
  <p>{{comment.content}}</p>
  {{!--  --}}
  {{!-- <p>the posts users id{{../post.user.id}}</p>
  <p>the current users id{{../user.id}}</p>
  <p>the comment users id{{comment.user_id}}</p> --}}
  {{!--  --}}
  <button class="{{idCheck ../user.id comment.user_id}}">Delete</button>
  {{/each}}

  <p>
    <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false"
      aria-controls="collapseExample">
      Add new Comment
    </a>
  </p>
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Comment</label>
        <input class="form-control" id="post-body" rows="3"></textarea>
      </div>
      <button class="comment" id="newPostBtn">Submit</button>
    </div>
  </div>
</div>

<script src="../js/comment.js"></script>